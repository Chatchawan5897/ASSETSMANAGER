{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@assets-manager/backend": ["backend/src/index.ts"],
      "@assets-manager/master-data": ["backend/src/modules/master-data/index.ts"]
    },
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "strictPropertyInitialization": false
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}