{
  "name": "backend",
  "projectType": "application",
  "root": "backend",
  "sourceRoot": "backend/src",
  "tags": ["type:backend"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/backend/dist"],
      "options": {
        "command": "npx webpack-cli build --config webpack.config.js --node-env=production",
        "cwd": "backend"
      },
      "configurations": {
        "development": {
          "command": "npx webpack-cli build --config webpack.config.js --node-env=development"
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/backend/dist/package.json",
        "{workspaceRoot}/backend/dist/yarn.lock"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/backend/dist/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "build",
        "buildTargetOptions": {
          "args": ["--config", "webpack.config.js", "--node-env=development"]
        },
        "watch": false
      },
      "configurations": {
        "development": {
          "buildTarget": "build:development"
        },
        "production": {
          "buildTarget": "build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "backend/**/*.ts",
          "backend/**/*.tsx",
          "backend/**/*.js"
        ]
      }
    }
  }
}
